{
  "name": "boilerplate-backend",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "node scripts/verifyEnvBackEnd && cross-env NODE_ENV=dev nodemon -r tsconfig-paths/register lib/server.ts",
    "cron-dev": "node scripts/verifyEnvBackEnd && cross-env NODE_ENV=dev nodemon -r tsconfig-paths/register lib/cron/index.ts",
    "build": "node scripts/verifyEnvBackEnd.js && tsc && tsc-alias",
    "start": "node server/server.js",
    "cron-start": "node server/cron/index.js",
    "lint": "eslint --ignore-path .gitignore --ext .ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "engines": {
    "node": ">=18.0.0 <=22"
  },
  "pre-commit": [
    "precommit"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --ignore-path .eslintignore",
      "prettier --ignore-path .gitignore --write"
    ],
    "*.{js,json}": [
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@aws-sdk/client-s3": "^3.583.0",
    "@aws-sdk/s3-request-presigner": "^3.583.0",
    "@sendgrid/mail": "^8.1.3",
    "@supabase/supabase-js": "^2.48.0",
    "@types/express": "^4.17.21",
    "@types/http-status": "^0.2.30",
    "@types/stripe": "^8.0.417",
    "@types/stripe-v3": "^3.1.33",
    "axios": "^1.7.2",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "http-status": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.4",
    "lodash.debounce": "^4.0.8",
    "mongoose": "^8.4.0",
    "node-2fa": "^2.0.3",
    "node-cron": "^3.0.3",
    "node-input-validator": "^4.5.1",
    "nodemon": "^3.1.0",
    "stream-chat": "^8.33.0",
    "stripe": "^15.12.0",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "twilio": "^5.0.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.7",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.2",
    "pre-commit": "1.2.2",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "~5.7.2"
  }
}
